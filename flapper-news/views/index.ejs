            <button type="button" class="btn btn-success" ng-hide="hotel.selected == null" ng-click="open()">Ver detalles</button></p>
        </div>
          
        </br>

        <h4>Puntos de interes</h4>
        
        <input type="text" class="form-control" placeholder="Agrega un punto de interes" ng-model="punto_interes" name="" 
         id="Autocomplete"  ng-autocomplete="result" details="details" options="options" >
        
        <button type="button" class="btn btn-success" ng-click="addNewChoice()">Agregar punto interes</button>
      
        <div class="form-group" data-ng-repeat="punto in ciudad.puntos_de_interes" > 
            <button class="btn btn-danger" ng-click="borrarCiudad(punto);" style="float: right">
                <span class="glyphicon glyphicon-trash"></span>
            </button>      
            <div style="overflow: hidden; padding-right: .5em;">
                {{punto.nombre}}
            </div>
        </div>
       </div>

    
       <div id="col2"> 
        <ui-gmap-google-map center='map.center' zoom='map.zoom'>
          <ui-gmap-marker idKey="$index" data-ng-repeat="marker in ciudad.puntos_de_interes" coords="marker">
            <ui-gmap-window isIconVisibleOnClick="true">
              <p>
                {{marker.nombre}}
              </p>
            </ui-gmap-window>
          </ui-gmap-marker>
         </ui-gmap-google-map>
        <br>
        <br>
       </div> 

      <div id="map-canvas"></div>
    </div>
  </div>
</script>

